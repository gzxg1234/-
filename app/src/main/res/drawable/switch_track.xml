<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <layer-list>
            <item android:left="0dp"
                  android:right="0dp"
                  android:top="1dp"
                  android:bottom="1dp">
		        <shape >
		            <stroke android:width="2dp" android:color="@android:color/black"/>
		        	<solid  android:color="#FFFFFF"/>
					<size android:height="25dp"/>
		        </shape>
            </item>
            
            <item android:left="4dp"
                  android:right="4dp"
                  android:top="5dp"
                  android:bottom="5dp">
		        <shape >
		            <solid android:color="#6988A0"/>
					<size android:height="25dp"/>
		        </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="0dp" 
                android:right="0dp" 
                android:top="1dp" 
                android:bottom="1dp">
		        <shape >
		            <solid  android:color="#FFFFFF"/>
		            <stroke android:width="2dp" android:color="@android:color/black"/>
					<size android:height="25dp"/>
		        </shape>
            </item>
        </layer-list>
    </item>
</selector>